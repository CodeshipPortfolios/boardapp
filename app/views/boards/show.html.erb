<div id="wrapper">
<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to 'List', boards_path, class: 'btn btn-outline-dark' %>
    <%= link_to 'Edit', edit_board_path(@board), class: 'btn btn-outline-dark' %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>

<%= render @board %>

<div class="p-comment__list">
    <div class="p-comment_listTitle">Comment</div>
    <%= render @board.comments %>
</div>

<%= render partial: 'comments/form', locals: { comment: @comment } %>

<footer>2018 created by NOZAWA RYO.</footer>
</div>